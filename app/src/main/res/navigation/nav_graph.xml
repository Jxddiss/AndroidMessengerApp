<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/vueAccueil">

    <fragment
        android:id="@+id/vueLogin"
        android:name="com.nicholson.nicmessenger.presentation.login.VueLogin"
        android:label="fragment_vue_login"
        tools:layout="@layout/fragment_vue_login" >
        <action
            android:id="@+id/action_vueLogin_vers_vueAccueil"
            app:destination="@id/vueAccueil" />
        <action
            android:id="@+id/action_vueLogin_vers_vueNotifications"
            app:destination="@id/vueNotifications" />
        <action
            android:id="@+id/action_vueLogin_vers_vueDemandes"
            app:destination="@id/vueDemandes" />
    </fragment>
    <fragment
        android:id="@+id/vueAccueil"
        android:name="com.nicholson.nicmessenger.presentation.accueil.VueAccueil"
        android:label="fragment_vue_accueil"
        tools:layout="@layout/fragment_vue_accueil" >
        <action
            android:id="@+id/action_vueAccueil_vers_vueConversation"
