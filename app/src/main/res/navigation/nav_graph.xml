            android:id="@+id/action_vueAccueil_vers_vueProfile"
            app:destination="@id/vueProfile" />
        <action
            android:id="@+id/action_vueAccueil_vers_vueNotifications"
            app:destination="@id/vueNotifications" />
        <action
            android:id="@+id/action_vueAccueil_vers_vueDemandes"
            app:destination="@id/vueDemandes" />
    </fragment>
    <fragment
        android:id="@+id/vueProfile"
        android:name="com.nicholson.nicmessenger.presentation.profile.VueProfile"
        android:label="fragment_vue_profile"
        tools:layout="@layout/fragment_vue_profile" >
        <action
            android:id="@+id/action_vueProfile_vers_vueLogin"
            app:destination="@id/vueLogin" />
    </fragment>
    <fragment
        android:id="@+id/vueConversation"
        android:name="com.nicholson.nicmessenger.presentation.conversation.VueConversation"
        android:label="fragment_vue_conversation"
        tools:layout="@layout/fragment_vue_conversation" >
        <action
            android:id="@+id/action_vueConversation_vers_vueAccueil"
            app:destination="@id/vueAccueil" />
