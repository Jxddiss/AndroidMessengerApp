            android:id="@+id/action_vueDemandes_vers_vueAccueil"
            app:destination="@id/vueAccueil" />
        <action
            android:id="@+id/action_vueDemandes_vers_vueLogin"
            app:destination="@id/vueLogin" />
    </fragment>
    <fragment
        android:id="@+id/vueNotifications"
        android:name="com.nicholson.nicmessenger.presentation.notification.VueNotifications"
        android:label="fragment_vue_notifications"
        tools:layout="@layout/fragment_vue_notifications" >
        <action
            android:id="@+id/action_vueNotifications_vers_vueAccueil"
            app:destination="@id/vueAccueil" />
        <action
            android:id="@+id/action_vueNotifications_vers_vueLogin"
            app:destination="@id/vueLogin" />
    </fragment>
</navigation>