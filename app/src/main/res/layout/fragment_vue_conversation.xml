<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.conversation.VueConversation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom_header"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/banniereImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bann"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fond_transparent_blanc_bottom"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/statutCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:contentPadding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_start_buddy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_end_buddy"
            app:layout_constraintDimensionRatio="1:1"
            android:elevation="10dp"
            android:backgroundTint="@color/online"
            app:cardCornerRadius="9dp" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/avatarImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/buddy2" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom Complet"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/guideline_start_text"
            app:layout_constraintBottom_toTopOf="@id/guideline_bottom_nom"
            />

        <TextView
            android:id="@+id/statutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="( en ligne )"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toEndOf="@id/nomTextView"
            app:layout_constraintBottom_toTopOf="@id/guideline_bottom_nom"
            />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello je suis Nom Complet"
            app:layout_constraintStart_toEndOf="@id/guideline_start_text"
            app:layout_constraintBottom_toTopOf="@id/guideline_bottom_description"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start_buddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end_buddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_bottom_header"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom_message"
        tools:listitem="@layout/message_item" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutMessage"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Ã‰criver un nouveau message"
        app:layout_constraintTop_toBottomOf="@id/guideline_top_input"
        app:layout_constraintStart_toEndOf="@id/guideline_start_input"
        app:layout_constraintEnd_toStartOf="@id/guideline_end_input"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom_input">

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textLongMessage" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/btnSend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/send"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/guideline_top_input"
        app:layout_constraintStart_toEndOf="@id/guideline_end_input"
        android:backgroundTint="@color/couleur_principale"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom_input"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.965"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/barDeChargement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="100dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>